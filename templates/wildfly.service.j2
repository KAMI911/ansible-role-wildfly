[Unit]
Description=WildFly application server
After=network.target

[Service]
Type=simple
User={{ wildfly_user }}
Group={{ wildfly_group }}
EnvironmentFile={{ wildfly_conf_dir }}/{{ wildfly_instance_name }}.conf
ExecStart={{ wildfly_link_dir if wildfly_create_symlink else wildfly_dir }}/bin/standalone.sh $JBOSS_OPTS

[Install]
WantedBy=multi-user.target
