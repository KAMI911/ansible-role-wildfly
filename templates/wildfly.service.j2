[Unit]
Description=WildFly Domain Member {{ wildfly_system_name }} application server
After=syslog.target network.target
Before=httpd.service

[Service]
Type=simple
Environment=LAUNCH_JBOSS_IN_BACKGROUND=1
Environment=JBOSS_CONF={{ wildfly_conf_dir }}/{{ wildfly_instance_name }}.conf
EnvironmentFile={{ wildfly_conf_dir }}/{{ wildfly_instance_name }}.conf

User=root
Group={{ wildfly_group }}

PIDFile=/var/run/wildfly/{{ wildfly_instance_name }}.pid

LimitNOFILE=102642

ExecStart={{ wildfly_link_dir}}/{{ wildfly_init_src_path }}/init.d/wildfly-init-{{ ansible_os_family | lower }}.sh start
ExecStop={{ wildfly_link_dir}}/{{ wildfly_init_src_path }}/init.d/wildfly-init-{{ ansible_os_family | lower }}.sh stop
StandardOutput=null

[Install]
WantedBy=multi-user.target
